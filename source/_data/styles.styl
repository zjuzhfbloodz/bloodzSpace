.post-body img
  max-width: 420px
  width: 100%
  height: auto

.post-body .idea-media
  display: flex
  gap: 16px
  align-items: flex-start
  margin: 1.2em 0

.post-body .idea-media-image
  flex: 0 0 auto
  width: min(42%, 360px)

.post-body .idea-media-image img
  max-width: 100%
  width: 100%
  height: auto
  border-radius: 10px

.post-body .idea-media-text
  flex: 1 1 auto
  min-width: 0
  line-height: 1.8
  color: #333

@media (max-width: 767px)
  .post-body .idea-media
    display: block
  .post-body .idea-media-image
    width: 100%
    margin-bottom: 8px
